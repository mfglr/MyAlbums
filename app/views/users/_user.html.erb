<div class="card">
    <div class="card-header p-2">
        <div class="d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <img src="<%= get_user_photo_url(user) %>" class="rounded-circle me-2" style="width:75px;height:75px">
                <div class="d-flex flex-column">
                    <span style="font-size:0.8rem;"><%= user.name %></span>
                    <span style="font-size:0.7rem;"><%= user.username %></span>
                </div>
            </div>

            <%= link_to user, class: "btn btn-outline-dark btn-sm" do %>
                <i class="bi bi-arrow-right-circle-fill"></i>
            <% end %>
        </div>
    </div>
</div>