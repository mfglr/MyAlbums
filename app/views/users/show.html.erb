<div class="container">
    <div class="row">
        <div class="col-lg-4 mb-5">
            <%= render partial: "users/user_card", locals: { user: @user } %>
        </div>
        <div class="col-lg-8">
            <div class="card mb-2">
                <div class="card-header text-center">
                    <h3>Albüm Listesi<h3>
                </div>
            </div>
            <% if @user.albums.any?%>
                <% @user.albums.each do |album| %>
                    <div class="mb-3">
                        <%= render partial: "albums/album", locals: { album: album } %>
                    </div>
                <% end %>
            <% else %>
                <div class="d-flex justify-content-center text-center mt-5">
                    <h3>
                        Hiç albüm yok!
                    </h3>
                </div>
            <% end %>
        </div>
    </div>
</div>