<div class="modal fade" id="user_photo_remove_modal_<%=user.id%>" tabindex="-1" aria-labelledby="user_photo_remove_modal_<%=user.id%>_label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="user_photo_remove_modal_<%=user.id%>_label">
          Fotağrafı silmek istediğinize emin misiniz?
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body d-flex justify-content-center">
        <button type="button" class="btn btn-outline-secondary me-1" data-bs-dismiss="modal" aria-label="Close">
          <span>İptal</span>
          <i class="bi bi-x"></i>
        </button>
        <%= button_to destroy_photo_user_path(user), method: :delete, class: "btn btn-danger" do %>
          <span>Sil</span>
          <i class="bi bi-trash3-fill"></i>
        <% end %>
      </div>
      <div class="modal-footer"></div>
    </div>
  </div>
</div>