<%= form_with(model: user) do |form| %>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group mb-3">
                <%= form.label :name, value:"İsim"  %>
                <%= form.text_field :name, class: "form-control" %>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group mb-3">
                <%= form.label :email %>
                <%= form.text_field :email, class: "form-control" %>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group mb-3">
                <%= form.label :username, value:"Kullanıcı Adı" %>
                <%= form.text_field :username, class: "form-control" %>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group mb-3">
                <%= form.label :website %>
                <%= form.text_field :website, class: "form-control" %>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group mb-3">
                <%= form.label :phone, value: "Telefon" %>
                <%= form.text_field :phone, class: "form-control" %>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group mb-3">
                <%= form.label :address_city, value: "Şehir" %>
                <%= form.text_field :address_city, class: "form-control" %>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group mb-3">
                <%= form.label :address_street, value: "Cadde-Sokak" %>
                <%= form.text_field :address_street, class: "form-control" %>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group mb-3">
                <%= form.label :address_suite, value: "Apartman" %>
                <%= form.text_field :address_suite, class: "form-control" %>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="form-group mb-3">
                <%= form.label :address_zipcode, value: "Posta Kodu" %>
                <%= form.text_field :address_zipcode, class: "form-control" %>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group mb-3">
                <%= form.label :address_geo_lat, value: "Enlem" %>
                <%= form.text_field :address_geo_lat, class: "form-control" %>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group mb-3">
                <%= form.label :address_geo_lng, value: "Boylam" %>
                <%= form.text_field :address_geo_lng, class: "form-control" %>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group mb-3">
                <%= form.label :company_name, value: "Şirket İsmi" %>
                <%= form.text_field :company_name, class: "form-control" %>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group mb-3">
                <%= form.label :company_catch_phrase, value: "Slogan" %>
                <%= form.text_field :company_catch_phrase, class: "form-control" %>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group mb-3">
                <%= form.label :company_bs, value: "İş Stratejisi" %>
                <%= form.text_field :company_bs, class: "form-control" %>
            </div>
        </div>

    </div>
    
    <div class="d-flex flex-row-reverse">
        <%= form.submit class:"btn btn-primary" %>
    </div>
<% end %>  