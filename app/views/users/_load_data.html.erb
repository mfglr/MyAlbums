<div class="row">
    <div class="offset-md-3 col-md-6 offset-lg-4 col-lg-4">
        <div id="load-data-container">
            <h6 class="text-center">
                Uygulamayı ilk defa mı çalıştırıyorsunuz?
                Verileri yülemek için aşağıdaki butana tıklayınız.
            </h6>

            <button class="btn btn-outline-primary w-100" id="button">
                <span>Verileri Yükle</span>
                <i class="bi bi-cloud-download"></i>
            </button>
        </div>
        <div id="loading-data-container" class="text-center" style="display:none">
            <h6>Veriler Yükleniyor...</h6>
            <div class="spinner-border text-dark" role="status">
                <span class="sr-only"></span>
            </div>
        </div>
    </div>
</div>

<script type="module">

    import dataChannel from "channels/data_channel"

    var button = document.getElementById("button")
    var template = document.getElementById("load-data-container")
    var loadingTemplate = document.getElementById("loading-data-container")
    button.addEventListener("click",() => {
        template.style.display = "none"
        loadingTemplate.style.display = "block"
    })

    document.getElementById("button").addEventListener("click",() =>{
        dataChannel.load()
    })

</script>