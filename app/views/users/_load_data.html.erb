<div class="row">
    <div class="offset-md-3 col-md-6 offset-lg-4 col-lg-4">
        <div id="template">
            <h6 class="text-center">
                Uygulamayı ilk defa mı çalıştırıyorsunuz?
                Verileri yülemek için aşağıdaki butana tıklayınız.
            </h6>
            <%= button_to load_data_path, class: "btn btn-outline-primary w-100",id: "button" do %>
                <span>Verileri Yükle</span>
                <i class="bi bi-cloud-download"></i>
            <% end %>
        </div>
        <div id="loading-template" class="text-center" style="display:none">
            <h6>Veriler Yükleniyor...</h6>
            <div class="spinner-border text-dark" role="status">
                <span class="sr-only"></span>
            </div>
        </div>
    </div>
</div>

<script>
    var button = document.getElementById("button")
    var template = document.getElementById("template")
    var loadingTemplate = document.getElementById("loading-template")
    button.addEventListener("click",() => {
        template.style.display = "none"
        loadingTemplate.style.display = "block"
    })
</script>