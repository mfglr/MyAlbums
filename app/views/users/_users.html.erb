<div class="row">

    <% if users.any? %>
        <% users.each do |user| %>
            <div class="col-md-6 col-lg-4">
                <div class="m-2">
                    <%= render user %>
                </div>
            </div>
        <% end %>
    <% else%>
        <div class="d-flex justify-content-center mt-5">
            <h3 class="text-center">Kullanıcı Yok!</h3>
        </div>
    <% end %>
   
</div>