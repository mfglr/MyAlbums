<div class="d-flex align-items-center">
    <div class="d-flex justify-content-center align-items-center position-relative me-2">
        <img src="<%= get_user_photo_url(user) %>" class="rounded-circle" style="width:125px;height:125px">
        <%if upload_button %>
            <div class="position-absolute">
                <button
                    type="button"
                    class="btn btn-outline-dark rounded-circle" 
                    style="width:40px;height:40px;"
                    data-bs-toggle="modal"
                    data-bs-target="#update_photo_<%= user.id %>"
                >
                    <i class="bi bi-camera"></i>
                </button>
            </div>
            <%= render partial:"users/user_photo_edit_modal", locals: { user: user } %>
        <% end %>
    </div>
    <div class="d-flex flex-column">
        <span class="fw-bold"> <%= user.name %> </span>
        <span> <%= user.username %> </span>
    </div>
</div>

