<div id="caurosel_<%=album.id%>" class="carousel slide">
  <div class="carousel-inner">
    <% album.album_photos.each_with_index do |photo, index| %>
      <% if index == 0 %>
        <div class="carousel-item active">
          <img src="<%= photo.url %>" class="d-block w-100">
          <div class="carousel-caption d-none d-md-block">
            <h5>Title</h5>
            <p><%= photo.title %></p>
          </div>
        </div>
      <% else %>
        <div class="carousel-item">
          <img src="<%= photo.url %>" class="d-block w-100">
          <div class="carousel-caption d-none d-md-block">
            <h5>Title</h5>
            <p><%= photo.title %></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#caurosel_<%=album.id%>" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#caurosel_<%=album.id%>" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>