<div class="card p-3">
  <div class="d-flex justify-content-between align-items-center">
    <div class="d-flex align-items-center">
        <img src="<%= album.album_photos.first.thumbnail_url %>" class="rounded-circle me-2" style="width:100px;height:100px;">
        <span><%= album.title %></span>
    </div>
    <button style="height:45px" type="button" class="btn btn-outline-dark" data-bs-toggle="modal" data-bs-target="#album_<%=album.id%>">
        <i class="bi bi-eye-fill"></i>
    </button>
  </div>
</div>


<div class="modal fade" id="album_<%=album.id%>" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="album_<%=album.id%>Label">
          <div class="d-flex align-items-center">
            <img src="<%= album.album_photos.first.thumbnail_url %>" class="rounded-circle me-2" style="width:100px;height:100px;">
            <span><%= album.title %></span>
          </div>
        </h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      
      <div class="modal-body p-0">
        <%= render partial: "albums/album_photos_slider", locals: { album: album } %>
      </div>

      <div class="modal-footer"></div>
    </div>
  </div>
</div>
